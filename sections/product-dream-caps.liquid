<div class="productView container mt2 mt10--md">
    <div itemscope itemtype="http://schema.org/Product">

        <div data-event-type="product" data-entity-id="{{product.id}}" data-name="{{product.title}}">


            {% assign variant = product.selected_or_first_available_variant %}
            {% assign featured_image = product.selected_or_first_available_variant.featured_image | default:
            product.featured_image %}

            <div class="mt0 mt0--md pt0">
                <form action="/cart/add" data-productid="{{ product.id }}" method="post" class="product-form"
                    id="add-to-cart" enctype="multipart/form-data">

                    <div class="container hide--lg">

                        <div class="row">
                            <div class="col">

                                <div class="mb1">
                                    <h1 class="sans--medium-large color--blue fw--600" style="line-height: 1"
                                        temprop="name">{{product.title}}</h1>
                                    <p class="sans--small fw--600 color--gray">{{ product.type }}</p>
                                </div>

                            </div>
                            <div class="col">

                                <div class="tl mb2">
                                    {% include 'stars' %}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row gutter--none">

                        <div class="col c5--md c6--lg c7--xl show--md">

                            <div class="of--hidden" data-image-gallery>

                                <div class="pdp-images slideshow slideshow-second product-photo-container">
                                    {% for image in product.images%}
                                    {% if forloop.index != 7 %}
                                    {% if forloop.index != 8 %}
                                    {% if image != featured_image %}
                                    {% if image != product.images[0] %}
                                    <div class="slide slide-{{ forloop.index }}">
                                        <img src="{{ image.src | product_img_url: '800x600', crop: 'center' }}">
                                    </div>
                                    {% endif %}
                                    {% endif %}
                                    {% endif %}
                                    {% endif %}
                                    {% endfor %}
                                </div>

                            </div>

                            <img class="full-width mt2" src="{{ 'free-ship-returns-2.jpg' | asset_url }}">

                        </div>
                        <div class="col c7--md c6--lg c5--xl">
                            <div class="pl1--md">
                                <div class="container-mobile">
                                    <div class="">
                                        <div class="">
                                            <div class="pt0 pt3--lg">

                                                <div class="mb1 show--lg">
                                                    <h1 class="sans--large color--blue fw--600" temprop="name">
                                                        {{product.title}}</h1>


                                                    <p class="sans--small fw--600 color--gray">{{ product.type }}</p>

                                                    {% include 'stars' %}

                                                </div>


                                                <div class="sans--body-new rich-text" itemprop="description">
                                                    {{ product.description }}
                                                </div>
                                                <p id="detailsModalBtn"
                                                    class="mt2 mb2 fw--600 hero__product-description pointer underline color--blue">
                                                    <span class="hide--md">tap</span><span class="show--md">click</span>
                                                    for ingredients
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="media__fixed mt2">

                                        {% if product.available and product.variants.size > 1 %}
                                        {% render 'swatch' for product.options as swatch %}
                                        {% endif %}

                                        {% assign hide_default_title = false %}
                                        {% if product.variants.size == 1 and product.variants.first.title contains
                                        'Default' %}
                                        {% assign hide_default_title = true %}
                                        {% endif %}
                                        <div id="product-variants"
                                            class="select--product-option{% if hide_default_title %} hidden{% endif %}">
                                            <select id="product-select" class="form-select" name="id"
                                                data-productid="{{ product.id }}">
                                                {% for variant in product.variants %}
                                                <option class="form-select" {% if
                                                    variant==product.selected_or_first_available_variant %} selected{%
                                                    endif %} value="{{ variant.id }}">
                                                    {{ variant.title }} - {{ variant.price | money }}
                                                </option>
                                                {% endfor %}
                                            </select>
                                        </div>


                                        <!-- Begin ReCharge code -->
                                        {% if product.available %}{% include 'subscription-product-new' %}{% endif %}
                                        <!-- End ReCharge code -->
                                        <div class="sans--small pb2 hidden">
                                            <div id="product-price" itemprop="offers" itemscope
                                                itemtype="http://schema.org/Offer" class="delta">
                                                <meta itemprop="priceCurrency" content="{{ shop.currency }}" />
                                                {% if product.available %}
                                                <link itemprop="availability" href="http://schema.org/InStock" />
                                                {% else %}
                                                <link itemprop="availability" href="http://schema.org/OutOfStock" />
                                                {% endif %}
                                                <p>
                                                    {% assign variant = product.selected_or_first_available_variant %}
                                                    {% if product.compare_at_price > product.price %}
                                                    <span class="product-price on-sale" itemprop="price">{{
                                                        variant.price | money }}</span>
                                                    <s class="product-compare-price">{{ variant.compare_at_price | money
                                                        }}</s>
                                                    {% else %}
                                                    <span class="product-price sans--medium fw--600" itemprop="price">{{
                                                        variant.price | money }}</span>
                                                    {% endif %}
                                                </p>
                                            </div>

                                        </div>




                                        <div id="backorder" class="hidden tc">
                                            <p>{{ '%s is back-ordered. We will ship it separately in 10 to 15 days.' |
                                                replace: '%s', '<span id="selected-variant"></span>' }}</p>
                                        </div>

                                        <div id="product-add" class="form-action">
                                            <div class="qtydiv">
                                                <div class="qtybox">
                                                    <span class="btnqty qtyminus icon-minus">-</span>
                                                    <input type="text" id="productQuantity" name="quantity" value="1"
                                                        min="1" class="quantity-selector quantity-input" readonly="">
                                                    <span class="btnqty qtyplus icon-plus">+</span>
                                                </div>
                                            </div>
                                            <input type="submit" name="add" id="add" class="button button--primary"
                                                value="Add to cart">
                                        </div>

                                        {% include 'guarantee' %}

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>


    </div>


</div>