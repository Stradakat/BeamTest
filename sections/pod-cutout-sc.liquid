<div class="sleep-cutout">
    <div class="cutout-content">
        <h1 class="tc action-title">{{section.settings.titleMain}}</h1>
        <div class="inline-copy">
            <div class="inline-item">
                <h1 class="copy-title">{{section.settings.title1}}</h1>
                <h1 class="copy-descript">{{section.settings.copy1}}<span class="dagger">&#8224;</span></h1>
            </div>
            <div class="seperator-vertical"></div>
            <div class="inline-item">
                <h1 class="copy-title">{{section.settings.title2}}</h1>
                <h1 class="copy-descript">{{section.settings.copy2}}<span class="dagger">&#8224;</span></h1>
            </div>
        </div>
    </div>
</div>

<style>
    .template-page .copy-descript::first-letter {
        text-transform: none !important;
    }
</style>

{% schema %}
{
    "name": "99%",
  "settings": [	      
            {
				"type": "text",
				"id": "titleMain",
				"label": "title main"
			},
            {
				"type": "text",
				"id": "title1",
				"label": "title1"
			},
            {
				"type": "textarea",
				"id": "copy1",
				"label": "copy1"
			},
            {
				"type": "text",
				"id": "title2",
				"label": "title2"
			},
            {
				"type": "textarea",
				"id": "copy2",
				"label": "copy2"
			}
  ]
}


{% endschema %}
