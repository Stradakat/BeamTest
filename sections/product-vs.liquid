"label": "list content"
},
{
"type": "richtext",
"id": "statContent3",
"label": "list content"
},
{
"type": "richtext",
"id": "statContent4",
"label": "list content"
}
]
}
],
"presets": [{
"name": "About Us",
"category": "Content"
}]
}

