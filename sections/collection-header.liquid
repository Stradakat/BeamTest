<div class="pt0 pb2--md pr" style="z-index: 1;">
    <div class="pr mr4 ml4 mt0--md header-margin">
        <div class="grid-container header-main-contain" style="">
            <div class="row align--center">
                <div class="col c12--lg pb4 pe--auto header-outer">
                    <div class="">
                        <div class="pr">
                            <div class="push-up">
                                <div style="display: flex; align-items: center; justify-content: center;" class="header-contain">
                                    <div class="pa header-content">
                                    <h2 class="sans--medium mb2 color--white mobile-title color--blue"><a href="/collections/shop-all">Shop All</a></h2>
                                    <h2 style="font-weight: 300; line-height: 125%;" role="heading" class="sans--medium mb2 color--white header-subtitle">{{section.settings.heroHeading}}</h2>
                                    </div>
                                    <picture class="full-width-img desktop-img">
                                        <source
                                            srcset="{{section.settings.statBGImage | img_url: '2048x2048'}}"
                                            media="(min-width: 800px)"><img class="full-width-img header-image" alt="about us header photo" src="{{section.settings.statBGImage | img_url: '2048x2048' | crop: 'center' }}">
                                    </picture>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .full-width-img {
        height: 300px;
        object-fit: cover;
        width: 100%;
    }
    .header-subtitle {
        width: 50vw;
        text-align: center;
    }
    .header-outer {
        height: 100%;
        padding-bottom: 0;
    }
    .mobile-title {
        display: none;
    }
    @media screen and (max-width: 800px) {
        .header-margin {
            margin: 0 15px;
        }
        .header-main-contain {
            padding: 0 !important;
        }
        .header-outer {
        height: max-content;
    }
        .mobile-title {
            display: flex;
            justify-content: center;
            font-size: 24px;
        }
        .full-width-img {
            height: 225px !important;
        }
        .header-image {
            display: none;
        }
        .header-subtitle {
            color: black;
            width: 80vw;
        }
        .header-content {
            width: 80vw;
        }
    }
    @media screen and (max-width: 500px) {
        .header-subtitle {
            width: 85vw !important;
        }
        .header-content {
            width: 85vw;
        }
    }
</style>

{% schema %}
{
  "name": "Collection Header",
"settings": [	      
          {
              "type": "image_picker",
              "id": "statBGImage",
              "label": "Background Image"
          },
            {
              "type": "richtext",
              "id": "heroHeading",
              "label": "Title"
          }
]
}
{% endschema %}