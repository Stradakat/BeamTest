    <div class="mt0 mb5 mt2--md mb8--md grid-copy">
        <div class="container tc">
            <h2 class="fw--600 sans--medium mb2 color--blue pr1 pl1">record breakers and risk takers:</h2>
            <h2 style="font-weight: 300!important" class="sans--large mb4 color--black pr1 pl1">meet the Beam Advisory Board</h2>
        <div class="row gutter--none desktop-slider">
            <div class="col advisor-img" style="display: flex; flex-wrap: wrap;">
                {% for block in section.blocks %}
                <div class="p1 advisor-img-item" style="flex: 1 1 30%;">
                    {% if block.settings.statCaption != '' %}
                        <div class="overlay"></div>
                    {% endif %}
                    <img class="aImage" style="width: 100%;" src="{{ block.settings.iconImg |  img_url: '400x300' }}">
                    {% if block.settings.statCaption != '' %}
                    <div class="quote-overlay-contain">
                        <div class="quote-icon" style="display: flex; flex-direction: row; justify-content: center; width: 100%; margin-bottom: -9%;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="53" height="102" viewBox="0 0 53 102">
                                <text id="_" data-name="“" transform="translate(3)" fill="#9ec5f9" font-size="102" font-family="HoeflerText-Black, Hoefler Text" font-weight="800" letter-spacing="0.014em"><tspan style="filter: brightness(10)" x="-2.051" y="74">“</tspan></text>
                              </svg>
                        </div>
                        <h1 class="quote-overlay">{{block.settings.statCaption}}</h1>
                    </div>
                    {% endif %}
                    <h1 class="fw--600">{{block.settings.statHeading}}</h1>
                    <h1 style="font-style: italic; line-height: 125%; font-size: 15px; padding-top: 3px; margin-top: 8px;">{{block.settings.statContent}}</h1>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
    </div>
    <div class="mobile-slider">
        {% for block in section.blocks %}
        <div class="">
            <div class=""></div>
            <img class="" src="{{ block.settings.iconImg |  img_url: '400x400' }}">
            <h1 class="mobile-title">{{block.settings.statHeading}}</h1>
            <h1 style="font-style: italic;">{{block.settings.statContent}}</h1>
            <h1 class="mobile-quote">{{block.settings.statCaption}}</h1>
        </div>
        {% endfor %}
    </div>

