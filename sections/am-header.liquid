<div class="pt2 mt0 mb0 mb0--md">
    <div class="bundle-contain">
       <div class="header-content">
          <div class="content-contain pb1">
             <h1 style="text-transform: none !important" class="sans--medium fw--400 mb1 color--blue header-title">Win the A.M. to P.M. Bundle</h1>
             <div class="tc pt1 pb1 sub-contain">
                <h2 style="text-transform: none !important" class="fw--400 sans--body content-copy">Beam is the worlds most innovative functional wellness brand, with unique products for everything from Sleep to Recovery. Our mission: help our commumity to better their bodies and minds so they can reach their maximum potential.</h2>
                <h2 style="text-transform: none !important" class="fw--400 sans--body content-copy">{{section.settings.headerCopy}}</h2>
             </div>
          </div>
          <div>
             <p style="text-transform: none !important" class="tl enter-email fw--600 mb1">Enter your email to win</p>
            <div class="klaviyo-form-ViHXfC"></div>
          </div>
       </div>
       <div class="pt0 img-contain" style="z-index: 1;">
          <div class="">
             <div class="grid-container main-contain">
                <div class="align--center">
                   <div class="header-outer">
                      <div class="">
                         <div class="pr">
                            <div class="push-up">
                               <div style="display: flex; align-items: center;" class="header-contain">
                                  <picture class="full-width desktop-img">
                                     <source
                                        srcset="{{section.settings.rightImg | img_url: '800x800'}}"
                                        media="(min-width: 800px)">
                                     <img class="full-width header-image" alt="about us header photo" src="{{section.settings.rightImg | img_url: '800x800' , crop: 'top' }}">
                                  </picture>
                               </div>
                            </div>
                         </div>
                      </div>
                   </div>
                </div>
             </div>
          </div>
       </div>
    </div>
    <style>
       .bundle-contain {
       display: flex;
       width: 100vw;
       padding-top: 9px;
       max-height: 100vh;
       overflow: hidden;
       }
       .pill {
       border-radius: 6px;
       display: inline-block;
       border: #2F358E;
       transition: 200ms ease-in-out;
       min-width: 240px;
       max-width: 170px;
       font-size: 16px;
       line-height: 22px;
       }
       .main-contain {
       padding: 0;
       }
       .img-contain {
       width: 50%;
       }
       .pill:hover {opacity: .8;}
       .header-image {
       border-radius: 0px;
       object-fit: cover;
       }
       .header-content {
       text-align: center;
       width: 50%;
       padding-left: 5%;
       max-width: 99vw;
       display: flex;
       flex-direction: column;
       justify-content: center;
       margin-bottom: 3%;
       }
       .enter-email {
       font-size: 17px;
       padding-bottom: 10px;
       }
       .lower-title {
       max-width: 90%;
       margin: auto;
       margin-bottom: 35px;
       }
       .mobile-img {
       display: none;
       }
       .header-subtitle {
       font-size: 42px;
       }
       .content-contain {
       padding-top: 25%;
       width: 100%;
       }
       .sub-contain {
        width: 70%;
       }
       .content-copy {
       line-height: 1.8;
       font-size: 16px;
       font-weight: 400;
       text-align: left;
       padding-top: 5%;
       }
       .header-title {
       font-size: 36px;
       text-align: left;
       text-transform: none !important;
       max-width: 95%;
       }
       @media (max-width: 820px) {
        .sub-contain {
        width: 90%;
       }
        
       .img-contain {
       display: none;
       }
       .header-content {
       width: 99%;
       padding-bottom: 10%;
       }
       .desktop-img {
       display: none;
       }
       .content-contain {
       padding-top: 5%;
       }
       }
       @media (max-width: 500px) {
        .header-title {
            width: 80%;
            
        }
    }
    </style>
    {% schema %}
    {
    "name": "Header",
    "settings": [	      
    {
    "type": "image_picker",
    "id": "rightImg",
    "label": "Header Image"
    },
    {
    "type": "text",
    "id": "heroHeading",
    "label": "Title"
    },
    {
    "type": "textarea",
    "id": "headerCopy",
    "label": "headerCopy"
    }
    ]
    }
    {% endschema %}