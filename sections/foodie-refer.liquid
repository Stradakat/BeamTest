<div class="pt0 pb2--md pr refer-contain" style="z-index: 1;">
    <div class="pr mt0--md refer-main">
        <div class="grid-container main-refer-contain" style="">
            <div class="row align--center">
                <div class="col c12--lg pb4 pe--auto refer-outer">
                    <div class="">
                        <div class="pr">
                            <div class="push-up">
                                <div style="display: flex; align-items: center; justify-content: center;" class="header-contain">
                                    <div class="pa color--black refer-content">
                                    <h2 style="line-height: 125%;" role="heading" class="sans--medium mb2 refer-title">Refer a friend.</h2>
                                    <h2 class="sans--medium mb3 color--white refer-subtitle">When you refer a friend, you'll both get $20 off your orders.</h2>
                                    <a class="btn" href="/pages/refer">Save now</a>
                                    </div>
                                    <picture class="full-width-img desktop-img">
                                        <source
                                            srcset="{{section.settings.statBGImage | img_url: '1024x1024'}}"
                                            media="(min-width: 800px)"><img loading="lazy" class="full-width-img refer-image" alt="about us header photo" src="{{section.settings.statBGImage | img_url: '1024x1024' | crop: 'center' }}">
                                    </picture>
                                    <picture class="full-width-img mobile-img">
                                        <source
                                            srcset="{{section.settings.mobileImg | img_url: 'grande'}}"
                                            media="(min-width: 800px)"><img loading="lazy" class="full-width-img refer-image" alt="about us header photo" src="{{section.settings.statBGImage | img_url: 'grande' | crop: 'center' }}">
                                    </picture>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .header-contain {
    }
    .mobile-img {
        display: none;
    }
    .refer-outer {
        height: 500px;
    }
    .full-width-img {
        height: 300px;
        object-fit: cover;
        width: 100%;
    }
    .refer-contain {
        margin-top: 10%;
    }
    .refer-content {
        display: flex;
        flex-direction: column;
        justify-content: center;
        z-index: 999;
        padding-top: 200px;
        left: 10%;
        color: #000;
    }
    .refer-outer {
        margin-bottom: -20px;
    }
    .refer-image {
        height: 500px;
    }
    .refer-subtitle {
        width: 24vw;
        text-align: center;
        font-size: 16px;
        text-align: left;
        color: black;
        line-height: 145%;
    }
    .refer-title {
        width: 24vw;
        text-align: center;
        font-size: 24px;
        text-align: left;
        color: #000;
        font-weight: 600;
        text-transform: none !important;
    }
    .btn {
        border-radius: 3px;
        display: inline-block;
        background-color: #427BBE;
        color: #fff;
        transition: 200ms ease-in-out;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 225px;
        height: 55px;
        font-weight: 400;
    }
    .main-refer-contain {
        margin: 0;
        padding: 0;
    }
    @media screen and (max-width: 1500px) {
    .refer-content {
        padding-top: 0 !important;
            top: 15% !important;
        }
    }
    @media screen and (max-width: 800px) {

        .mobile-img {
            display: flex;
        }
        .desktop-img {
            display: none;
        }
        .refer-content {
            width: 100%;
            align-items: center;
            left: 0;
            top: 25%;
        }
        .main-refer-contain {
            padding: 0;
            margin: 0;
        }
        .refer-btn {
            width: 45vw;
            background: #3d7cc9;
            color: #fff;
        }
        .refer-outer {
            padding-bottom: 0;
        }
        .refer-title {
        font-size: 25px;
        text-align: center;
        width: 100%;
        }
        .refer-subtitle {
            width: 90vw;
            font-size: 18px;
            text-align: center;
        }
        .refer-image {
            height: 350px;
        }
            .refer-outer {
            height: 350px;
        }
        .refer-main {
            height: 350px;
        }
        .refer-contain {
            margin-top: 48%;
        }
    }
</style>

{% schema %}
{
  "name": "refer",
"settings": [	      
          {
              "type": "image_picker",
              "id": "statBGImage",
              "label": "Background Image"
          },
          {
            "type": "image_picker",
            "id": "mobileImg",
            "label": "Background Image"
            },
            {
              "type": "richtext",
              "id": "heroHeading",
              "label": "Title"
          },
          {
            "type": "richtext",
            "id": "subtitle",
            "label": "Subtitle"
        }
]
}
{% endschema %}