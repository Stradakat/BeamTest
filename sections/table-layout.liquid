<div class="tc pt6 pb2 pt10--md pb10--md grid-section">
    <div class="container">
		<div class="col c6--lg c6--md c12--sm">
			{% if section.settings.left-heading %}
				<h4 class="color--purple sans--large fw--600">{{ section.settings.left-heading }}</h4>
			{% endif %}
			{% if section.settings.left-content %}
				<h5 class="color--blue sans--large fw--400" style="font-style: italic;">{{ section.settings.left-content }}<span class="cross-text">†</span></h5>
			{% endif %}
		</div>
		<div class="col c6--lg c6--md c12--sm">
			{% if section.settings.right-heading %}
				<h4 class="color--purple sans--large fw--600">{{ section.settings.right-heading }}</h4>
			{% endif %}
			{% if section.settings.right-content %}
				<h5 class="color--blue sans--large fw--400 " style="font-style: italic;">{{ section.settings.right-content }}<span class="cross-text">†</span></h5>
			{% endif %}
		</div>      
    </div>
</div>


{% schema %}
{
  "name": "Table Layout",
  "class": "percent-table",
  "settings": [	
             {
              "type": "text",
              "id": "left-heading",
              "label": "Left Heading"			
			},
			{
              "type":"text",
              "id":"left-content",
              "label": "Left Content"			  
			},
			{
				"type": "text",
				"id": "right-heading",
				"label": "Right Heading"			
			  },
			{
				"type":"text",
				"id":"right-content",
				"label": "Right Content"			  
			}
  ],
  "presets": [{
    "name": "Table Layout",
    "category": "Content"
  }]
}

{% endschema %}