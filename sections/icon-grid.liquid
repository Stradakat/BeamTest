<div class="tc row mt10--md mb4--md pt6 align--center">
    <div class="col c11 c10--md c10--lg">
        <h2 class="sans--large tc fw--600 mb2 color--blue">{{ section.settings.title }}</h2>


        <div style="max-width: 1600px; margin-left: auto; margin-right: auto" class="pt4--md pb3 pb4--md"  id="new-ingredient-section">
            <div class="show--md row align--center">
				{% for block in section.blocks %}
					<div class="col c4--md mb2 mb4--md">
						{% if block.settings.iconimage %}
							<p class="tc">
								<span class="dib">
									<picture class="promo__press-logo p1"><img loading="lazy" class="promo__press-logo"
											style="max-width: 90px;" src="{{ block.settings.iconimage | img_url: 'medium' }}">
									</picture>
								</span>
							</p>
						{% endif %}
						{% if block.settings.iconheading %}
							<h4 class="tc color--blue fw--600 pb2 pt1">{{ block.settings.iconheading}}</h4>
						{% endif %}
						{% if block.settings.iconcontent %}
							<h5 class="tc pl1 pr1 pl5--md pr5--md">
								{{ block.settings.iconcontent }}
							</h5>
						{% endif %}
					</div>
				{% endfor %}                
            </div>

            <div class="ingredient-slider hide--md">
				{% for block in section.blocks %}
					<div class="db mb2">
						{% if block.settings.iconimage %}
							<p class="tc"><span class="dib">
									<picture class="promo__press-logo p1"><img loading="lazy" class="promo__press-logo"
											style="max-width: 90px;" src="{{ 'icon-magnesium.png' | asset_url }}">
									</picture>
								</span>
							</p>
						{% endif %}
						{% if block.settings.iconheading %}
							<h4 class="tc color--blue fw--600 pb2 pt1">{{ block.settings.iconheading}}</h4>
						{% endif %}
						{% if block.settings.iconcontent %}
							<h5 class="tc pl1 pr1 pl5--md pr5--md">
								{{ block.settings.iconcontent }}
							</h5>
						{% endif %}
					</div>
				{% endfor %}               
            </div>
        </div>
    </div>
</div>
<script>
	$(document).ready(function () {
		$('.ingredient-slider').slick({
        autoplay: true,
        slidesToShow: 5,
        slidesToScroll: 1,
        fade: false,
        useTransform: true,
        arrows: false,
        dots: false,
        autoplaySpeed: 5000,
        adaptiveHeight: false,
        pauseOnHover: true,
        responsive: [
            {
                breakpoint: 1424,
                settings: {
                    fade: false,
                    slidesToShow: 3,
                    fade: false,
                    arrows: false,
                    dots: true,
                    customPaging: function (slider, i) {
                        return $('<button type="button" />').text(i + 1);
                    }
                }
            },
            {
                breakpoint: 768,
                settings: {
                    slidesToShow: 1,
                    fade: false,
                    arrows: false,
                    dots: true,
                    customPaging: function (slider, i) {
                        return $('<button type="button" />').text(i + 1);
                    }
                }
            }
        ]
    });
	});
	
</script>
{% schema %}
  {
    "name": "Icon grid",
	"class": "icon-grid",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      }
    ],
    "blocks": [
      {
        "type": "column",
        "name": "Column",
        "limit": 10,
        "settings": [
          {
            "id": "iconimage",
            "type": "image_picker",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "iconheading",
            "label": "Icon heading"
          },
          {
            "type": "text",
            "id": "iconcontent",
            "label": "Icon content"            
          }
        ]
      }
    ],
    "presets": [{
        "name": "Icon grid",
        "category": "content",
        "blocks": [
          {
            "type": "column"
          },
          {
            "type": "column"
          },
          {
            "type": "column"
          }
        ]
    }]
  }
{% endschema %}

