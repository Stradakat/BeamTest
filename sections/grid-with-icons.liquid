    "name": "Grid with icons",
	"class": "grid-with-icons",
    "settings": [
      {
        "type": "text",
        "id": "gridTitle",
        "label": "Heading"
      }
    ],
    "blocks": [
      {
        "type": "column",
        "name": "Column",
        "limit": 10,
        "settings": [
          {
            "id": "iconimage",
            "type": "image_picker",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "iconheading",
            "label": "Icon heading"
          },
          {
            "type": "text",
            "id": "iconcontent",
            "label": "Icon content"            
          }
        ]
      }
    ],
    "presets": [{
        "name": "grid with icons",
        "category": "content",
        "blocks": [
          {
            "type": "column"
          },
          {
            "type": "column"
          },
          {
            "type": "column"
          }
        ]
    }]
  }
{% endschema %}



