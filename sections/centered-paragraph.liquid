    .paragraph-centered {
        width: 90%;
    }
    .icoImage {
        display: none;
    }
    .icons-inline {
        flex-direction: column;
    }
    .arrow {
      display: none;
    }
    .icon-item {
      font-style: 25px !important;
      padding: 20px 0;
