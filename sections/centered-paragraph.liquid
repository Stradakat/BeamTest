    }
    .icons-inline {
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        margin-bottom: 40px;
    }
    .icon-item {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
