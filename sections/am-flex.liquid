            {
				"type": "text",
				"id": "joinTitle",
				"label": "title"
			},
            {
				"type": "textarea",
				"id": "copy",
				"label": "copy"
			},
            {
                "type": "image_picker",
                "id": "joinImg",
                "label": "Image"
            },
            {
				"type": "text",
				"id": "joinTitle2",
				"label": "title"
			},
            {
				"type": "textarea",
				"id": "copy2",
				"label": "copy"
			},
            {
                "type": "image_picker",
                "id": "joinImg2",
                "label": "Image"
            }
  ]
}

