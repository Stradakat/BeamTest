<div class="product-collection flex-collection" id="sleep-trigger">
    {% for product in collections.sleep.products %}
    <div class="product-item sleep-item">
        {% for image in product.images | limit: 1 %}
        <a href="{{product.url}}">
            <img class="product-image" src="{{ image.src | img_url: '450x450' }}">
        </a>
        <div class="middle">
            <form class="product-form" action="/cart/add" data-productid="{{product.id}}" method="post">
                {% if product.variants.size > 1 %}
                <div style="display:none" class="product-options">
                    <select name="id" data-productid="{{product.id}}" id="product-select" class="product-select">
                        {% for variant in product.variants %}
                        <option {% if variant==selectedVariant %} selected="selected" {% endif %}
                            value="{{ variant.id }}">{{ variant.title }} - {{ variant.price | money }}</option>
                        {% endfor %}
                    </select>
                </div>
                {% else %}
                <input style="display:none" type="hidden" name="id" data-productid="{{product.id}}"
                    class="product-select" value="{{ product.variants[0].id }}"
                    data-variant-title="{{ product.variants[0].title }}" />
                {% endif %}
                <input style="display:none" type="text" name="quantity" id="quantity" value="1" />
                <div class="add-to-cart">
                    <div>
                        {% assign hide_default_title = false %}
                        {% if product.variants.size == 1 and product.variants.first.title contains 'Default'
                        %}
                        {% assign hide_default_title = true %}
                        {% endif %}
                        <div style="display: none;" id="product-variants"
                            class="select--product-option{% if hide_default_title %} hidden{% endif %}">
                            <select id="product-select" class="form-select" name="id" data-productid="{{ product.id }}">
                                {% for variant in product.variants %}
                                <option class="form-select" {% if variant==product.selected_or_first_available_variant
                                    %} selected{% endif %} value="{{ variant.id }}">
                                    {{ variant.title }} - {{ variant.price | money }}
                                </option>
                                {% endfor %}
                            </select>
                        </div>



                        <!-- Begin ReCharge code -->
                        <div style="display: none;">
                            {% if product.available %}{% include 'subscription-product-new' %}{% endif %}
                            <!-- End ReCharge code -->
                            <div style="display: none" class="sans--small pb2 hidden">
                                <div id="product-price" itemprop="offers" itemscope itemtype="http://schema.org/Offer"
                                    class="delta">
                                    <meta itemprop="priceCurrency" content="{{ shop.currency }}" />
                                    {% if product.available %}
                                    <link itemprop="availability" href="http://schema.org/InStock" />
                                    {% else %}
                                    <link itemprop="availability" href="http://schema.org/OutOfStock" />
                                    {% endif %}
                                    <p>
                                        {% assign variant = product.selected_or_first_available_variant %}
                                        {% if product.compare_at_price > product.price %}
                                        <span class="product-price on-sale" itemprop="price">{{ variant.price |
                                            money }}</span>
                                        <s class="product-compare-price">{{ variant.compare_at_price | money
                                            }}</s>
                                        {% else %}
                                        <span class="product-price sans--medium fw--600" itemprop="price">{{
                                            variant.price | money }}</span>
                                        {% endif %}
                                    </p>
                                </div>
                            </div>
                        </div>




                        <div id="product-add" class="form-action mt0 mb3">
                            <div style="display: none;" class="qtydiv">
                                <div class="qtybox">
                                    <span class="btnqty qtyminus icon-minus">-</span>
                                    <inputtype="text" id="productQuantity" name="quantity" value="1" min="1"
                                        class="quantity-selector quantity-input" readonly="">
                                        <span class="btnqty qtyplus icon-plus">+</span>
                                </div>
                            </div>
                            <div class="sub-btn">
                                <input type="submit" name="add" id="add" class="sub-input" value="Subscribe Today"
                                    value="{{ add_to_cart | escape }}">
                            </div>
                        </div>
                    </div>
                </div>

            </form>
            <br>
            <div class="learn-btn"><a href="{{product.url}}">Learn More</a></div>

        </div>
        {% endfor %}
        <a href="{{product.url}}">
            <div class="product-title-price">
                <p class="fw--600 product-title">{{ product.title }}</p>
                {% for variant in product.variants %}
                <label for="rc_purchase_type_autodeliver" class="rc_label rc_label__autodeliver">
                    <s class="crossed-out">{{ product.price | money_without_trailing_zeros }}</s>
                    {% assign check_zeros = variant.metafields.subscriptions.discount_variant_price | split: "." |
                    slice: 1 %}
                    {% assign no_zeros = variant.metafields.subscriptions.discount_variant_price | split: "." | slice: 0
                    %}
                    {% if check_zeros contains "00" %}
                    <div id="" class="fw--600 dib rc_price rc_price__autodeliver">
                        ${{variant.metafields.subscriptions.discount_variant_price | split: "." | slice: 0 }}</div>
                    {% else %}
                    <div id="" class="fw--600 dib rc_price rc_price__autodeliver">
                        {{variant.metafields.subscriptions.discount_variant_price | money }}</div>
                    {% endif %}

                </label>

                {% endfor %}
            </div>
        </a>
        <div class="sans--body show--md mb1">
            {% include 'stars-dark' %}
        </div>
    </div>
    {% endfor %}
</div>

