<script>

    $(document).ready(function () {
        var sleepMenu = document.getElementById('sleep');
        sleepMenu.style.fontWeight = "600";
        sleepMenu.style.borderBottom = "4px solid #427BBE";
        function toggle() {
            var menuItems = document.getElementsByClassName("menu-item");
            var divsToHide = document.getElementsByClassName("product-collection");
            for (var i = 0; i < divsToHide.length; i++) {
                divsToHide[i].style.display = "none";
            }
            for (var i = 0; i < menuItems.length; i++) {
                menuItems[i].style.borderBottom = "none";
            }
        }


        $("a").click(function (event) {
            toggle()
            var menu = document.getElementById(event.target.id)
            menu.style.borderBottom = "4px solid";
            var trigger = document.getElementById(event.target.id + "-trigger");
            trigger.style.display = "flex";
        });

        document.querySelectorAll('a[href^="#anchor"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                var sleep = document.getElementById('sleep-trigger');
                sleep.style.display = "flex";
                var sleepMenu = document.getElementById('sleep');
                sleepMenu.style.fontWeight = "600";
                sleepMenu.style.borderBottom = "4px solid";


                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });

    });
</script>